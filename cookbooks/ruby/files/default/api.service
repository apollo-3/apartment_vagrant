[Unit]
Description=Grape Api on ruby (rack)
After=network.target

[Service]
Type=simple
Environment=GRAPE_HOME=/var/apartment_api
ExecStartPre=/bin/bash -c "mkdir -p ${GRAPE_HOME}/logs"
ExecStart=/bin/bash -c "/usr/local/bin/rackup ${GRAPE_HOME}/config.ru -o 0.0.0.0 -p 3000 > ${GRAPE_HOME}/logs/grape.log 2>&1"

[Install]
WantedBy=multi-user.target
